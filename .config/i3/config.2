# Dylan's i3 config file
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# workspace 1 2 3 4 5 output DFP11
# workspace 6 7 8 9 10 output DFP10
workspace www output DFP11
workspace code output DFP11
workspace game output DFP11
workspace 4 output DFP11
workspace 5 output DFP11
workspace 6 output DFP11
workspace 7 output DFP11
workspace 8 output DFP11

workspace mpv output DFP10
workspace 10 output DFP10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+q kill

# Starts dmenu2 inside of j4-dmenu-desktop
bindsym $mod+d exec j4-dmenu-desktop --dmenu="dmenu -o 0.9 -nb '#1E1E1E' -nf '#FFFFFF' -sb '#8F9D6A' -i -h 25 -w 1600 -fn Lemon  -name dmenu2" --term="urxvt"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+g split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating / border
bindsym $mod+Shift+space floating enable; border 1pixel
bindsym $mod+space floating disable; border none

# change focus between tiling / floating windows
# bindsym $mod+space focus mode_toggle

# switch to workspace
bindsym $mod+1 workspace www
bindsym $mod+2 workspace code
bindsym $mod+3 workspace game
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace mpv
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace www
bindsym $mod+Shift+2 move container to workspace code
bindsym $mod+Shift+3 move container to workspace games
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace mpv
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {

        # These bindings trigger as soon as you enter the resize mode
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# Resize Mode
bindsym $mod+r mode "resize"

# Move back and forth between workspaces
workspace_auto_back_and_forth yes
bindsym $mod+z workspace back_and_forth
bindsym $mod+Shift+z move container to workspace back_and_forth

# Move to next workspace on output
bindsym $mod+Tab workspace next_on_output

# Disables window borders
for_window [class="^.*"] border pixel 0
new_window pixel 0
new_float pixel 1

# Gaps
gaps inner 20

# class                 border  backgr. text    indicator
client.focused          #FFFFFF #FFFFFF #000000 #FFFFFF
client.focused_inactive #FFFFFF #FFFFFF #888888 #FFFFFF
client.unfocused        #FFFFFF #FFFFFF #888888 #FFFFFF
client.urgent           #323537 #323537 #ffffff #323537
client.placeholder      #323537 #323537 #ffffff #323537

# Makes popus open floating
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Enables Floating for all steam windows apart from the main ui
for_window [class="Steam"] floating enable
for_window [title="Steam"] floating disable
for_window [class="Steam" title="Steam - Update News$"] floating enable

# Programs on Workspaces
assign [class="Firefox"] www
assign [class="qutebrowser"] www

assign [class="Steam"] game
assign [class="csgo_linux"] game

assign [class="mpv"] mpv
assign [class="Transmission-gtk"] mpv
assign [class="Popcorntime"] mpv

# Sets Bg
exec_always --no-startup-id feh --bg-fill /home/dylan/Pictures/papes/22.jpe

# Starts lemonbar
exec_always --no-startup-id ~/.config/lemonbar/bar.sh
